{
  "expo": {
    "name": "ANIMO Pilates Studio",
    "slug": "PilatesStudioApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "animopilatesstudio",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.animo.pilatesstudio",
      "buildNumber": "1",
      "icon": "./assets/images/icon.png",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCalendarsUsageDescription": "ANIMO Pilates Studio uses calendar access to help you schedule and manage your pilates classes and appointments.",
        "NSCameraUsageDescription": "This app may need camera access for profile photos.",
        "NSMicrophoneUsageDescription": "This app may need microphone access for video features.",
        "NSPhotoLibraryUsageDescription": "This app may need photo library access for profile photos.",
        "UIBackgroundModes": ["remote-notification"],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSAllowsArbitraryLoadsInWebContent": false,
          "NSExceptionDomains": {
            "animo-pilates-backend.fly.dev": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSExceptionMinimumTLSVersion": "1.2",
              "NSExceptionRequiresForwardSecrecy": true,
              "NSIncludesSubdomains": true
            },
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0",
              "NSExceptionRequiresForwardSecrecy": false
            }
          }
        }
      }
    },
    "android": {
      "package": "com.animo.pilatesstudio",
      "icon": "./assets/images/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "config": {
        "firebase": {
          "measurementId": "G-XXXXXXXXXX"
        }
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#F5F2B8",
          "defaultChannel": "animo-notifications",
          "mode": "development"
        }
      ],
      "expo-web-browser",
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar to manage class schedules."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d4bdbfc4-ecbc-40d7-aabb-ad545c836ab3"
      }
    }
  }
}
